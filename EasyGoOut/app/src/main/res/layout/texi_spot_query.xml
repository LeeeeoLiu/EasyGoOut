<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="打车点推荐"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="当前时间："
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/toolbar8"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="8:23"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_time"
        android:layout_alignBottom="@+id/text_time"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/text_time"
        android:layout_toRightOf="@+id/text_time"
        android:text="当前天气："
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toRightOf="@+id/textView11"
        android:text="多云"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/button_style_orange"
        android:text="时间"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button_style_orange"
        android:text="起点"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/mapView2"
        android:layout_alignStart="@+id/mapView2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/text_time"
        android:layout_alignStart="@+id/text_time"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/mapView2"
        android:layout_alignEnd="@+id/mapView2">

        <Spinner
            android:id="@+id/spinner_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/texi_spot_time" />

        <TextView
            android:id="@+id/text_future_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时后,即：8:30~9:00"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/text_start_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="请输入出发点"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignRight="@+id/mapView2"
        android:layout_alignEnd="@+id/mapView2" />

    <fragment
        android:id="@+id/mapView2"
        class="com.baidu.mapapi.map.SupportMapFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:clickable="true"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/btn_search_poi"
        android:layout_alignStart="@+id/btn_search_poi"
        android:layout_marginTop="8dp"
        android:layout_alignRight="@+id/btn_search_poi"
        android:layout_alignEnd="@+id/btn_search_poi"
        android:layout_above="@+id/btn_search_poi" />

    <Button
        android:id="@+id/btn_search_poi"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/button_style_orange"
        android:text="查询"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>