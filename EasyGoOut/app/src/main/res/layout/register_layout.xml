<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_name"
        android:layout_alignBottom="@+id/register_name"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:text="用户名"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView28"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_marginBottom="33dp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/register_phone"
        android:layout_alignLeft="@+id/register_phone"
        android:layout_alignStart="@+id/register_phone"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_password"
        android:layout_alignBottom="@+id/register_password"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:text="密码"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="手机号"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/register_phone"
        android:layout_alignBottom="@+id/register_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:layout_above="@+id/btn_send_code"
        android:layout_alignLeft="@+id/btn_send_code"
        android:layout_alignStart="@+id/btn_send_code"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_send_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/register_code"
        android:layout_alignLeft="@+id/textView30"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/register_code"
        android:layout_alignStart="@+id/textView30"
        android:layout_marginBottom="40dp"
        android:text="注册" />


    <Button
        android:id="@+id/btn_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送验证码"
        android:layout_above="@+id/textView30"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_code"
        android:layout_alignBottom="@+id/register_code"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:text="验证码"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入验证码"
        android:inputType="number"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/btn_send_register"
        android:layout_alignLeft="@+id/btn_send_code"
        android:layout_alignStart="@+id/btn_send_code" />

</RelativeLayout>