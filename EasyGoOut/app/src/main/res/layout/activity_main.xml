<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leeeeo.easygoout.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/img_backgroud_top"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/raw_1490517797" />

        <ImageView
            android:id="@+id/img_user_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="185dp"
            app:srcCompat="@drawable/raw_1489201154"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:text="用户名："
            android:textColor="@color/black"
            android:layout_alignTop="@+id/img_user_head"
            android:layout_toRightOf="@+id/img_user_head"
            android:layout_toEndOf="@+id/img_user_head"
            android:layout_marginTop="27dp" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:text="张三"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户类型："
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <TextView
            android:id="@+id/text_user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_user_name"
            android:layout_alignStart="@+id/text_user_name"
            android:layout_alignTop="@+id/textView3"
            android:text="乘客"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/text_user_type"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/setting" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_user_head"
            android:ems="10"
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/btn_texi_spot_suggest"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@+id/editText2"
            android:layout_toLeftOf="@+id/btn_supply_query"
            android:layout_toStartOf="@+id/btn_supply_query"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn1" />

        <ImageButton
            android:id="@+id/btn_supply_query"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_below="@+id/editText2"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn2" />

        <ImageButton
            android:id="@+id/btn_hotspot_query"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/btn_texi_spot_suggest"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btn_texi_spot_suggest"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn3" />

        <ImageButton
            android:id="@+id/btn_texi_history"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/btn_supply_query"
            android:layout_alignRight="@+id/btn_supply_query"
            android:layout_alignTop="@+id/btn_hotspot_query"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn4" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
