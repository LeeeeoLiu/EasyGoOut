<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="热点查询"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/button4"
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView15"
        android:background="@drawable/button_style_black"
        android:text="未来时间预测"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="190dp"
        android:layout_height="35dp"

        android:background="@drawable/button_style_black"
        android:text="查询历史数据"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button4"
        android:layout_below="@+id/toolbar8"
        android:background="@color/orange" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/toolbar8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/button4"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/spinner_supply_future"
        android:layout_alignEnd="@+id/spinner_supply_future"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前时间："
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hot_spot_future_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8:23"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/linearLayout3"
       android:layout_marginTop="16dp"
       android:layout_below="@+id/linearLayout2"
       android:layout_alignLeft="@+id/linearLayout2"
       android:layout_alignStart="@+id/linearLayout2"
       android:layout_alignRight="@+id/linearLayout2"
       android:layout_alignEnd="@+id/linearLayout2">

       <TextView
           android:id="@+id/textView11"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="当前天气："
           android:textColor="@color/black"
           android:textSize="20sp"
            />

       <TextView
           android:id="@+id/hot_spot_future_weather"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="多云"
           android:textColor="@color/black"
           android:textSize="20sp" />
   </LinearLayout>



    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/holo_orange_light"
        android:text="时间"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button10"
        android:layout_width="90dp"
        android:layout_height="35dp"

        android:layout_marginTop="13dp"
        android:background="@android:color/holo_orange_light"
        android:text="区划"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />

    <Spinner
        android:id="@+id/spinner_supply_future"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:entries="@array/hot_spot_time"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button10"
        android:layout_marginBottom="21dp"
        android:background="@android:color/holo_orange_light"
        android:text="查询"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignRight="@+id/supply_query_future_area"
        android:layout_alignEnd="@+id/supply_query_future_area" />

    <TextView
        android:id="@+id/supply_query_future_area"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignEnd="@+id/spinner_supply_future"
        android:layout_alignLeft="@+id/spinner_supply_future"
        android:layout_alignRight="@+id/spinner_supply_future"
        android:layout_alignStart="@+id/spinner_supply_future"
        android:text="辽宁省 沈阳市 和平区"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>